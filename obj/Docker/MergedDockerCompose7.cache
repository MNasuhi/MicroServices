services:
  DirectoryMSDb:
    container_name: DirectoryMSDb
    image: mongo
    ports:
    - published: 27017
      target: 27017
    restart: always
    volumes:
    - /site:data/db:rw
  contact.api:
    build:
      context: D:\VSProjects\DirectoryWithMicroService
      dockerfile: ContactService/Contact.API/Dockerfile
      labels:
        com.microsoft.created-by: visual-studio
        com.microsoft.visual-studio.project-name: Contact.API
      target: base
    container_name: Contact.API
    depends_on:
      DirectoryMSDb:
        condition: service_started
    entrypoint: tail -f /dev/null
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_LOGGING__CONSOLE__DISABLECOLORS: "true"
      DOTNET_USE_POLLING_FILE_WATCHER: '1'
      DatabaseSettings:ConnectionString: mongodb://DirectoryMSDb:27017
      NUGET_FALLBACK_PACKAGES: /root/.nuget/fallbackpackages
    image: contactapi:dev
    labels:
      com.microsoft.visualstudio.debuggee.arguments: ' --additionalProbingPath /root/.nuget/packages
        --additionalProbingPath /root/.nuget/fallbackpackages  "/app/bin/Debug/netcoreapp3.1/Contact.API.dll"'
      com.microsoft.visualstudio.debuggee.killprogram: /bin/sh -c "if PID=$$(pidof
        dotnet); then kill $$PID; fi"
      com.microsoft.visualstudio.debuggee.program: dotnet
      com.microsoft.visualstudio.debuggee.workingdirectory: /app
    ports:
    - published: 8000
      target: 80
    tty: true
    volumes:
    - D:\VSProjects\DirectoryWithMicroService\ContactService\Contact.API:/app:rw
    - C:\Users\m_nas\vsdbg\vs2017u5:/remote_debugger:rw
    - C:\Users\m_nas\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - /.aspnet/https:/root/.aspnet/https/:rw
    - C:\Users\m_nas\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
    - C:\Microsoft\Xamarin\NuGet:/root/.nuget/fallbackpackages:ro
    - C:\Users\m_nas\.nuget\packages:/root/.nuget/packages:ro
    - D:\VSProjects\DirectoryWithMicroService:/src:rw
version: '3.4'